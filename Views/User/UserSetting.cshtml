 @{
    Layout = "~/Views/Shared/_Layout.cshtml";
 }
 @model Estore.Models.AccountInfo
 <!-- Breadcrumb Section Begin -->
    <div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <a asp-controller="Home" asp-action= "Index"><i class="fa fa-home"></i> Home</a>
                        <span>Register</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Form Section Begin -->

    <!-- Register Section Begin -->
    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="register-form">
                        <h2>Infomation about @Model.Username</h2>
                        <form asp-controller="User" asp-action="UserSetting" method="POST">
                            <div class="group-input">
                                <label for="fullname">First name *</label>
                                <input type="text" name="txtFirstName" value="@Model.FirstName">
                            </div>
                            <div class="group-input">
                                <label for="fullname">Last name *</label>
                                <input type="text" name="txtLastName" value="@Model.LastName">
                            </div>
                            <div class="group-input">
                                <label for="displayname">Display name *</label>
                                <input type="text" name="txtDisplayName" value="@Model.DisplayName">
                            </div>
                            <div class="group-input">
                                <label for="phonenumber">Phone number *</label>
                                <input type="text" name="txtPhoneNumber" value="@Model.PhoneNumber">
                            </div>
                            <div class="group-input">
                                <label for="email">Email address *</label>
                                <input type="text" name="txtEmail" value="@Model.Email">
                            </div>
                            <div class="group-input">
                                <label for="address">Address *</label>
                                <input type="text" name="txtAddress" value="@Model.Address">
                            </div>
                                <div class="group-input">
                                <label for="facebook">Facebook URL *</label>
                                <input type="text" name="txtFacebook" value="@Model.Facebook">
                            </div>
                                <div class="group-input">
                                <label for="twitter">Twitter *</label>
                                <input type="text" name="txtTwitter" value="@Model.Twitter">
                            </div>
                            <div class="group-input">
                                <label for="instagram">Instagram *</label>
                                <input type="text" name="txtInstagram" value=" @Model.Instagram">
                            </div>
                            <div class="group-input">
                                <label for="username">Username or email address *</label>
                                <input type="text" name="txtUsername" readonly value="@Model.Username">
                            </div>
                            <div class="group-input">
                                <label for="pass">Password *</label>
                                <input type="password" name="txtPassword">
                                @ViewData["Message"]
                            </div>
                            <button type="submit" class="site-btn register-btn">SAVE CHANGES</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Register Form Section End -->